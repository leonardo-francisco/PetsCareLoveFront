@model PetsCareLove.Web.Dtos.LoginDto

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<styles>
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/auth.css" rel="stylesheet" />
</styles>
  


<div class="login-container">
    @if (TempData["success"] != null)
    {
        <div id="success-alert" class="alert alert-success">
            @TempData["success"]
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger" id="error-alert">
            @TempData["error"]
        </div>
    }
    <h2>PetsCareLove</h2>
    <img src="/images/login_image.jpg" alt="User Image">
    <h3>Login</h3>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Username" asp-for="Email">          
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="form-group">
            <i class="fas fa-key"></i>
            <input type="password" placeholder="Senha" id="password" asp-for="Password">         
            <i class="fas fa-eye eye-icon" onclick="togglePasswordVisibility()"></i>
            
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="links">
            <a href=@Url.Action("Register","Authentication")>Registre-se aqui</a>
            <a href=@Url.Action("ForgotPassword","Authentication")>Esqueceu a senha?</a>
        </div>

        <button class="button" type="submit">Login</button>

    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="~/js/auth.js"></script>