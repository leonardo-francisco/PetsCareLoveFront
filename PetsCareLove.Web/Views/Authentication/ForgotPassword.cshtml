@model PetsCareLove.Web.Dtos.LoginDto
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<styles>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/auth.css" rel="stylesheet" />
</styles>



<div class="login-container">
    <h2>PetsCareLove</h2>
    <img src="/images/login_image.jpg" alt="User Image">
    <h3>Esqueceu a senha</h3>
    <form asp-action="ForgotPassword" method="post">
        <div class="form-group">
            <i class="fas fa-user"></i>
            <input type="text" placeholder="Username" asp-for="Email">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="form-group">
            <i class="fas fa-key"></i>
            <input type="password" placeholder="Senha" id="password" asp-for="Password">
            <i class="fas fa-eye eye-icon" onclick="togglePasswordVisibility()"></i>

        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="links">
            <a href=@Url.Action("Login","Authentication")>Voltar ao login</a>
        </div>

        <button class="button" type="submit">Recuperar</button>

    </form>
</div>

<script src="~/js/auth.js"></script>