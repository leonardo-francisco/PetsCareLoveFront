@model PetsCareLove.Web.Dtos.UserDto

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<styles>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/auth.css" rel="stylesheet" />
</styles>



<div class="login-container">
    @if (TempData["success"] != null)
    {
        <div id="success-alert" class="alert alert-success">
            @TempData["success"]
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger" id="error-alert">
            @TempData["error"]
        </div>
    }
    <h2>PetsCareLove</h2>
    <img src="/images/login_image.jpg" alt="User Image">
    <h3>Registrar</h3>
    <form asp-action="Register" method="post">
        <div class="row">
            <div class="col form-group">
                <i class="fas fa-user"></i>
                <input type="text" class="form-control" placeholder="Nome" asp-for="Name">
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="col form-group">
                <i class="fas fa-envelope"></i>
                <input type="text" class="form-control" placeholder="E-mail" asp-for="Email">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col form-group">
                <i class="fas fa-key"></i>
                <input type="password" class="form-control" id="password" placeholder="Senha" asp-for="Password">
                <i class="fas fa-eye eye-icon" onclick="togglePasswordVisibility()"></i>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="col form-group">
                <i class="fas fa-masks-theater"></i>
                <select class="form-control" id="exampleFormControlSelect1" asp-for="RoleId" asp-items="@ViewBag.Roles">
                    <option value="">--Selecione Perfil--</option>                    
                </select>
            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        <div class="links">
            <a href=@Url.Action("Login","Authentication")>Voltar ao login</a>           
        </div>
        <button class="button" type="submit">Registrar</button>
    </form>
</div>

<script src="~/js/auth.js"></script>


