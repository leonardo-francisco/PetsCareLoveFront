@model PetsCareLove.Web.ViewModels.InfoTrainerViewModel
@{
    ViewData["Title"] = "Details Trainer";
}

<div class="dashboard-breadcrumb mb-25">
    <h2>Detalhe Adestrador</h2>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="panel">
            <div class="panel-body">
                <div class="profile-sidebar">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="profile-sidebar-title">Informação</h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-icon btn-outline-primary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-sm dropdown-menu-sm-end">
                                <li><a class="dropdown-item" href="@Url.Action("EditTrainer","Trainer", new{ id = @Model.Id})"><i class="fa-regular fa-pen-to-square"></i> Editar Informação Adestrador</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="top">
                        <div class="image-wrap">
                            <div class="part-img rounded-circle overflow-hidden">
                                <img src="@Model.Photo" alt="admin">
                            </div>
                            <button class="image-change"><i class="fa-light fa-camera"></i></button>
                        </div>
                        <div class="part-txt">
                            <h4 class="admin-name">@Model.Name</h4>
                        </div>
                    </div>
                    <div class="bottom">
                        <h6 class="profile-sidebar-subtitle">Info Contato</h6>
                        <ul>
                            <li><span>Nome:</span>@Model.Name</li>
                            <li><span>Telefone:</span>@Model.Phone</li>
                            <li><span>E-mail:</span>@Model.Email</li>                          
                            <li><span>Data Registro:</span>24 Nov 2022</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="panel">
            <div class="panel-header">
                <h5>Animais em Treinamento</h5>
            </div>
            <div class="panel-body">
                <div class="user-activity">
                    <ul>
                        @foreach (var item in Model.AppointmentsInfo)
                        {
                            <li>
                                <div class="left">
                                    <div class="image-wrap">
                                        <div class="part-img rounded-circle overflow-hidden user-activity-title" style="width:40px;height:55px">
                                            <img src="@item.Pet.Photo" alt="admin">
                                        </div>
                                    </div>
                                    <span class="user-activity-title">@item.Pet.Name</span>
                                    <span class="user-activity-date">@item.Notes</span>
                                </div>
                                <div class="right">
                                    <span class="user-activity-time">
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-icon btn-outline-primary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fa-solid fa-ellipsis"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-sm dropdown-menu-sm-end">
                                                <li><a class="dropdown-item" href="@Url.Action("MedicalRecordsByAppointment","Veterinarian", new{ id = @item.Id})"><i class="fa-regular fa-pen-to-square"></i> Detalhes Treinamento Animal</a></li>
                                            </ul>
                                        </div>
                                    </span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

