@model IEnumerable<PetsCareLove.Web.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Ecommerce";
    var filteredProducts = Model;
    var filteredAcessorios = filteredProducts.Where(p => p.CategoryId == ViewBag.Acessorios);
    var filteredHigiene = filteredProducts.Where(p => p.CategoryId == ViewBag.Higiene);
    var filteredAlimentos = filteredProducts.Where(p => p.CategoryId == ViewBag.Alimentos);
}

@section Styles{
    <style>
        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom:40px;
        }

        .product-item {
            position: relative;
            width: calc(25% - 20px);
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .product-item:hover {
                transform: scale(1.05);
            }

        .product-header {
            font-size: 18px;
            font-weight: bold;
            padding: 10px;
            text-align: center;
        }

        .product-image img {
            width: 100%;
            height: auto;
        }

        .product-footer {
            padding: 10px;
            text-align: center;
        }

        .price {
            font-size: 16px;
            color: #333;
        }

        .product-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .product-item:hover .product-overlay {
            opacity: 1;
        }

        .btn {
            background-color: #ff6f61;
            color: #fff;
            border: none;
            padding: 10px 20px;
            margin: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #e65c50;
            }
    </style>
}

